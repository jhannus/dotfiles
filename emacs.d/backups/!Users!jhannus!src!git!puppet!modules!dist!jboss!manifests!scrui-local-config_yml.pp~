define jboss::scrui-local-config_yml(
  $ccenv,
  $scrui_cyberark_appId,
  $scrui_cyberark_safe,
  $scrui_fb_appId,
  $scrui_fb_apiKey,
  $scrui_fb_appSecret,
  $url_prefix, 
  $cyberark_env,
  $envclass 
  ) {
  
  $app="${name}"
  $path="/opt/cc/etc/${app}"
  
  # Realize resource
  File <| title == "${path}" |>

  file { "${path}/scrui-local-config.yml":
    owner => 'ccas', group => 'ccas', mode => 444,
    content => template("jboss/scrui-local-config.yml.erb"),
    require => [ User['ccas'], Group['ccas'], Package["${app}-rpm"], Class['jboss'], File["${path}"], ],
    notify => Service["jboss-${app}"],
  }
  
}
