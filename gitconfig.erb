[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	s = status
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%Cred%h%Creset [%an] %C(yellow)%ad%Creset | %s%d\" --graph --date=local
	type = cat-file -t
	dump = cat-file -p
	pending = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
	pull-rebase = pull --no-commit --rebase
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = emacs -nw
	autocrlf = input
	excludesfile = <%= ENV['HOME'] %>.gitignore_global
	pager = less -r
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[sequence]
	editor = emacs -nw
